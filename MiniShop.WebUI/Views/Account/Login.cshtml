@{
    ViewData["Title"] = "Login";
}
@model LoginModel
<h1 class="display-6 text-primary">Login</h1>
<hr />
<form asp-controller="Account" asp-action="Login" method="post">
    <input type="hidden" asp-for ="ReturnUrl" value=@Model.ReturnUrl />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="row">
        <div class="col-md-6">
            <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Email"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Email" />
                </div>

            </div>
             <div class="row mb-2">
                <div class="col-md-3">
                    <label class="col-form-label" asp-for="Password"></label>
                </div>
                <div class="col-md-9">
                    <input class="form-control" asp-for="Password" />
                </div>

            </div>
            <div class="row mt-3">
                <div class="col-10"></div>
                <div class="col-2 d-flex justify-content-end">
                <button class="btn btn-primary btn-md" type="submit">Login</button>
                </div>
            </div>
        </div>
    </div>

</form>