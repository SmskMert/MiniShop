
@model UserModel
<h1 class="display-5 text-primary">Create User</h1>
<hr />
<form asp-controller="Admin" asp-action="UserCreate" method="post">
    <div class="row">
        <div class="col-md-8" >
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="FirstName"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="FirstName" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="LastName"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="LastName" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="UserName"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="UserName" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="Email"></label>
                </div>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="Password"></label>
                </div>
                <div class="col-md-10">
                    <input class="form-control" asp-for="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            
           
            
            <div class="form-group mb-2">
                <div class="col-md-12 row">
                    <button type="submit" class="btn btn-sm btn-success col-md-3 offset-9">
                    Save</button>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <h5 class="display-6 text-primary">Categories</h5>
            @foreach (var role in (List<IdentityRole>)ViewBag.Roles)
            {
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class='form-check-input'
                    value="@role.Name" name="selectedRoles" 
                    @if (ViewBag.SelectedRoles != null)
                    {
                        @(((string[])ViewBag.SelectedRoles).Any(e=>e == role.Name) ? "checked" : "")
                    }
                        
                    />
                    <label class="form-check-label">@role.Name</label>
                </div>
            }
            <hr />
            
        </div>
    </div>
</form>

