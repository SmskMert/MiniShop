@{
  ViewData["Title"] = "Category List";
}
@model List<Category>

<div class="d-flex align-items-center justify-content-between">
  <h1 class="display-5 text-primary">Category List</h1>
  <div>
    <a class="btn btn-warning" asp-controller="Admin" asp-action="DeletedCategoryList">Deleted Categories</a>

    <a class="btn btn-primary" asp-controller="Admin" asp-action="CategoryCreate" id="productCreate">Create Category</a>
  </div>
</div>
<hr />

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var category in Model)
    {
      <tr>
        <td scope="row">@category.CategoryId</td>
        <td>@category.Name</td>
        <td>@category.Description</td>
        <td>
          <a asp-controller="Admin" asp-action="CategoryDetailsEdit" asp-route-id=@category.CategoryId
          class="btn btn-sm btn-warning">Details/Edit</a>

          <!-- Button trigger modal -->
        <button class="btn btn-sm btn-danger" data-bs-toggle="modal"
          data-bs-target="#staticBackdrop_@category.CategoryId">Delete</button>

          <!-- Modal -->
        <div class="modal fade" id="staticBackdrop_@category.CategoryId" data-bs-backdrop="static"
          data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="staticBackdropLabel">Warning</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <strong>@category.CategoryId @category.Name</strong> will be deleted.
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                  <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteCategory"
                  asp-route-id=@category.CategoryId>Confirm</a>
                </div>
              </div>
            </div>
          </div>

        </td>
      </tr>

    }
  </tbody>
</table>

