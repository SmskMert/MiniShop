@using Newtonsoft.Json
@{
    ViewData["Title"] = "Category Create";

}
@model CategoryModel
<h1 class="display-5 text-primary">Create Category</h1>
<hr />
<form asp-controller="Admin" asp-action="CategoryCreate" method="post" enctype="multipart/form-data" >
    <div class="row">
        <div class="col-md-8" >
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="Name"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="Name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row mb-2">
                <div class="col-md-2 d-flex align-items-center">
                    <label class="form-check-label" asp-for="Description"></label>
                </div>
                <div class="col-md-10">
                    <input type="text" class="form-control" asp-for="Description" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            
            <div class="form-group mb-2">
                <div class="col-md-12 row">
                    <button type="submit" class="btn btn-sm btn-success col-md-3 offset-9">
                    Save</button>
                </div>
            </div>
        </div>

    </div>
</form>