@model Product
<div class="col-4">
  <div class="card">
    <div class="card-img text-center mt-2">
      <img src="~/images/@Model.ImageUrl" alt="...">
    </div>
    <div class="card-body mb-0 pb-2">
      <h5 class="card-title text-center text-primary">@Model.Name</h5>
      <p class="card-text text-center mb-1">@Model.Description</p>
      <p class="card-text text-center text-muted ">@Model.Price</p>
    </div>
    <div class="d-flex justify-content-around card-footer bg-light">
      <a asp-controller="MiniShop" asp-action="Details" asp-route-url=@Model.Url class="btn btn-sm btn-primary">Details</a>
      <a href="#" class="btn btn-sm btn-primary">Add Card</a>
    </div>
  </div>
</div>