@model ProductViewModel

<nav aria-label="...">
    <ul class="pagination mt-3">
        <li class='page-item @(Model.PageInfo.CurrentPage==1 ? "disabled" : "")'>
            <a class="page-link" asp-controller="MiniShop" asp-action="List"
                asp-route-page="@(Model.PageInfo.CurrentPage-1)">Previous</a>
        </li>

      

      
        @for (int i = 0; i < Model.PageInfo.TotalPages(); i++)
        {
            <li class='page-item @(Model.PageInfo.CurrentPage == i+1 ? "active" : "")'>
                <a class="page-link" asp-controller="MiniShop" asp-action="List"
                asp-route-page="@(i+1)">@(i+1)</a>
                </li>
        }
       




        <li class="page-item">
            <a class="page-link" asp-controller="MiniShop" asp-action="List"
                asp-route-page="@(Model.PageInfo.CurrentPage+1)">Next</a>
        </li>
    </ul>
</nav>
