@{
    ViewData["Title"] = "Search";
}
@model List<Product>
<div class="container">
    <div class="row">

        <div class="col-3">
            @await Component.InvokeAsync("Categories")
        </div>

        <div class="col-9">
            @if (Model.Count() == 0)
            {
                <partial name="_NoProduct" />
            }
            else
            {
                <div class="row">
                    @foreach (var product in Model)
                    {
                        <partial name="_Product" model="product" />
                    }
                </div>
            }
        </div>
    </div>
</div>